<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magemastery_todo_task" resource="default" engine="innodb" comment="TODO tasks">
        <column xsi:type="int" name="task_id" unsigned="false" nullable="false" identity="true" comment="Task ID"/>
        <column xsi:type="varchar" name="label" length="255" nullable="false" default="0" comment="Task label"/>
        <column xsi:type="varchar" name="status" length="255" nullable="false" default="open" comment="status" />
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="true" identity="false" comment="customer_id" />

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="task_id"/>
        </constraint>
        
        <constraint xsi:type="foreign" referenceId="CUSTOMER_ID_REFERENCE" table="magemastery_todo_task" column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE" />    
    </table>
</schema>